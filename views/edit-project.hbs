{{#>layout title="Edit Project"}}
    <main>
      <section class="blog-form">
        <form action="/update-project/{{id}}?_method=PATCH" method="post" class="container-form">
          <h1 class="section-title">Edit MY PROJECT</h1>
          <div class="from-field">
            <label for="input-project-title" class="form-label"
              >Project Name</label
            >
            <input
              id="inputTitle"
              name="inputTitle"
              class="form-input"
              type="text"
              value="{{data.title}}"
              required
            />
          </div>
          <div class="from-field">
            <label class="form-label" for="input-project-content"
              >Description</label
            >
            <textarea
              id="inputContent"
              name="inputContent"
              class="form-input"
              rows="8"
              required>
              {{data.content}}</textarea>
          </div>

          <div class="checkbox_input" required>
            <label class="form-label" for="input-blog-content"
              >Technologies</label
            >
            <div class="column">
              <div class="checkbox_input">
                <input
                  class="checkbox"
                  type="checkbox"
                  id="Agular"
                  name="Agular"
                  value="Agular"
                />
                <label for="Agular">Agular</label><br />
                <input
                  class="checkbox"
                  type="checkbox"
                  id="nodeJs"
                  name="nodeJs"
                  value="NodeJs"
                />
                <label for="nodeJs"> Node Js</label><br />
              </div>
              <div class="checkbox_input">
                <input
                  class="checkbox"
                  type="checkbox"
                  id="react"
                  name="react"
                  value="React"
                />
                <label for="react"> React</label><br />
                <input
                  class="checkbox"
                  type="checkbox"
                  id="vueJs"
                  name="vueJs"
                  value="VueJs"
                />
                <label for="vueJs"> Vue Js</label><br />
              </div>
              </div>
            </div>
          <div class="from-field">
            <label for="input-project-image" class="form-label"
              >Upload Image</label
            >
            <div class="input-blog-image-group">
              <label for="input-project-image">
                <p>choose</p>
                <img class="fileImg" src="/assets/img/file.png" />
              </label>
              <input
                id="input-project-image"
                name="image"
                class="form-input"
                type="file"
                placeholder="title"
                hidden
              />
            </div>
          </div>

          <div class="button-group">
            <button class="from-submit-button" type="submit">Save Project</button>
          </div>
        </form>
      </section>
    </main>
    
{{/layout }}