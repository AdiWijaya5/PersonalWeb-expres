{{#>layout title="Project Detail" users=users}}
<main>
  <section class="blogdetail-container">
  	<article class="postcard dark blue">
				<img class="postcard__img" src={{ data.image }} alt="Image Title" />
			</a>
			<div class="postcard__text">
				<h1 class="postcard__title blue">{{data.title}}</h1>
				<div class="postcard__subtitle small">
          	<div class="postcard__preview-txt">Di Upload Oleh : {{data.user.username}}</div>
				</div>
				<div class="postcard__bar"></div>
				<div class="postcard__preview-txt">{{data.content}}</div>
         <div class="icone-f">
          {{#if angular}}
            <i class="fa-brands fa-angular"></i>
          {{/if}}
          {{#if nodeJs}}
            <i class="fa-brands fa-js"></i>
          {{/if}}
          {{#if react}}
              <i class="fa-brands fa-react"></i>
          {{/if}}
          {{#if vueJs}}
            <i class="fa-brands fa-vuejs"></i>
          {{/if}}
        </div>
         <div>Dibikin Pada: {{data.startDate }}, Sampai {{data.endDate}}</div>
        <time datetime="2020-05-25 12:00:00">
						<i class="fas fa-clock mr-2"></i> upload: {{formatDateToWIB data.createdAt}}
					</time>
			</div>
		</article>
  </section>
</main>
{{/layout }}